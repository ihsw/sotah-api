{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "experimentalDecorators": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": false
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ]
}
